{
    "ReverseProxy": {
        "Routes": {
            "catalog": {
                "ClusterId": "catalog-cluster",
                "Match": {
                    "Path": "/catalog/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/catalog" }
                ]
            },
            "identity": {
                "ClusterId": "identity-cluster",
                "Match": {
                    "Path": "/identity/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/identity" }
                ]
            },
            "photo": {
                "ClusterId": "photo-cluster",
                "Match": {
                    "Path": "/photo/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/photo" }
                ]
            }
        },
        "Clusters": {
            "catalog-cluster": {
                "Destinations": {
                    "catalog-api": {
                        "Address": "http://catalog.api:8080/"
                    }
                }
            },
            "identity-cluster": {
                "Destinations": {
                    "identity-api": {
                        "Address": "http://identityprovider.api:8080/"
                    }
                }
            },
            "photo-cluster": {
                "Destinations": {
                    "photo-api": {
                        "Address": "http://photo.api:8080/"
                    }
                }
            }
        },
        "Logging": {
            "LogLevel": {
                "Default": "Information",
                "Microsoft.AspNetCore": "Warning"
            }
        },
        "AllowedHosts": "*"
    }
}
